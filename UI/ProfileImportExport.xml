<Script file="ProfileImportExport.lua" />

<Frame name="LiteMountProfileExport" parent="UIParent" hidden="true" inherits="TooltipBackdropTemplate" mixin="LiteMountProfileExportMixin" frameStrata="DIALOG" toplevel="true">
    <Scripts>
        <OnLoad inherit="append" method="OnLoad" />
        <OnShow inherit="append" method="OnShow" />
    </Scripts>
    <Size x="480" y="320" />
    <Anchors>
        <!-- This puts it over where the profile dropdown menu is. -->
        <Anchor point="TOP" relativeTo="InterfaceOptionsFrame" relativePoint="TOPRIGHT" y="64" />
    </Anchors>
    <Frames>
        <Button parentKey="CloseButton" inherits="UIPanelCloseButton">
            <Anchors>
                <Anchor point="TOPRIGHT" x="-4" y="-4" />
            </Anchors>
        </Button>
        <ScrollFrame parentKey="Scroll" inherits="UIPanelScrollFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-48" />
                <Anchor point="BOTTOMRIGHT" x="-32" y="8" />
            </Anchors>
            <ScrollChild>
                <EditBox parentKey="EditBox" autoFocus="false" multiLine="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                    </Anchors>
                    <Scripts>
                        <OnShow function="EditBox_SetFocus" />
                        <OnEscapePressed function="EditBox_ClearFocus" />
                        <OnUpdate function="InputScrollFrame_OnUpdate" />
                        <OnCursorChanged function="ScrollingEdit_OnCursorChanged" />
                    </Scripts>
                    <FontString inherits="ChatFontNormal" />
                </EditBox>
            </ScrollChild>
        </ScrollFrame>
    </Frames>
    <Layers>
        <Layer level="ARTWORK">
            <FontString inherits="GameFontNormalLarge" parentKey="Title">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
</Frame>

<Frame name="LiteMountProfileImport" parent="UIParent" hidden="true" inherits="TooltipBackdropTemplate" mixin="LiteMountProfileImportMixin" frameStrata="DIALOG" toplevel="true">
    <Size x="480" y="160" />
    <Anchors>
        <!-- This puts it over where the profile dropdown menu is. -->
        <Anchor point="TOP" relativeTo="InterfaceOptionsFrame" relativePoint="TOPRIGHT" y="64" />
    </Anchors>
    <Layers>
        <Layer level="ARTWORK">
            <FontString inherits="GameFontNormalLarge" parentKey="Title" Text="LM_IMPORT_PROFILE">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </FontString>
            <FontString inherits="GameFontNormal" parentKey="ProfileNameText" justfyH="RIGHT" text="LM_NEW_PROFILE">
                <Size x="96" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-48" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
    <Frames>
        <Button parentKey="CloseButton" inherits="UIPanelCloseButton">
            <Anchors>
                <Anchor point="TOPRIGHT" x="-4" y="-4" />
            </Anchors>
        </Button>
        <Frame parentKey="NameContainer" inherits="TooltipBackdropTemplate" frameStrata="ARTWORK" enableMouse="false">
            <KeyValues>
                <KeyValue key="backdropColor" value="GRAY_FONT_COLOR" type="global" />
                <KeyValue key="backdropColorAlpha" value="0.5" type="number" />
            </KeyValues>
            <Size y="38" />
            <Anchors>
                <Anchor point="LEFT" relativeKey="$parent.ProfileNameText" x="8" />
                <Anchor point="RIGHT" x="-108" />
            </Anchors>
        </Frame>
        <Frame parentKey="DataContainer" inherits="TooltipBackdropTemplate" frameStrata="ARTWORK" enableMouse="false">
            <KeyValues>
                <KeyValue key="backdropColor" value="GRAY_FONT_COLOR" type="global" />
                <KeyValue key="backdropColorAlpha" value="0.5" type="number" />
            </KeyValues>
            <Size y="38" />
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.NameContainer" relativePoint="BOTTOMLEFT" y="-8" />
                <Anchor point="RIGHT" relativeKey="$parent.NameContainer" />
            </Anchors>
        </Frame>
        <EditBox parentKey="ProfileName" autoFocus="false">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.NameContainer" x="8" />
                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.NameContainer" x="-8" />
            </Anchors>
            <FontString inherits="ChatFontNormal" />
        </EditBox>
        <EditBox parentKey="ProfileData" autoFocus="false">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.DataContainer" x="8" />
                <Anchor point="BOTTOMRIGHT" relativeKey="$parent.DataContainer" x="-8" />
            </Anchors>
            <FontString inherits="ChatFontNormal" />
        </EditBox>
        <Button parentKey="ImportButton" inherits="UIPanelButtonTemplate" text="IMPORT">
            <Scripts>
                <OnClick>
                    self:GetParent():ImportProfile()
                </OnClick>
            </Scripts>
            <Size y="32" />
            <Anchors>
                <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.DataContainer" x="4" />
                <Anchor point="RIGHT" x="-16" />
            </Anchors>
        </Button>
    </Frames>
</Frame>

</Ui>
