<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011-2020 Mike Battersby -->

<Script file="ProfileImportExport.lua" />

<Frame name="LiteMountProfileExport" parent="UIParent" hidden="true" inherits="TooltipBackdropTemplate" mixin="LiteMountProfileExportMixin" frameStrata="DIALOG" toplevel="true">
    <KeyValues>
        <KeyValue key="backdropBorderColor" value="GRAY_FONT_COLOR" TYpe="global" />
        <KeyValue key="backdropColorAlpha" value="0.8" TYpe="number" />
    </KeyValues>
    <Scripts>
        <OnLoad inherit="append" method="OnLoad" />
        <OnShow inherit="append" method="OnShow" />
    </Scripts>
    <Size x="480" y="320" />
    <Anchors>
        <!-- This puts it over where the profile dropdown menu is. -->
        <Anchor point="TOP" relativeTo="InterfaceOptionsFrame" relativePoint="TOPRIGHT" y="64" />
    </Anchors>
    <Frames>
        <ScrollFrame parentKey="Scroll" inherits="UIPanelScrollFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-48" />
                <Anchor point="BOTTOMRIGHT" x="-32" y="36" />
            </Anchors>
            <ScrollChild>
                <EditBox parentKey="EditBox" multiLine="true" autoFocus="false">
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                    </Anchors>
                    <Scripts>
                        <OnShow function="EditBox_SetFocus" />
                        <OnEscapePressed function="EditBox_ClearFocus" />
                        <OnUpdate function="InputScrollFrame_OnUpdate" />
                        <OnCursorChanged function="ScrollingEdit_OnCursorChanged" />
                    </Scripts>
                    <FontString inherits="ChatFontNormal" />
                </EditBox>
            </ScrollChild>
        </ScrollFrame>
        <Button parentKey="OkayButton" inherits="UIPanelButtonTemplate" text="OKAY">
            <Size x="96" y="22" />
            <Scripts>
                <OnClick> self:GetParent():Hide() </OnClick>
            </Scripts>
            <Anchors>
                <Anchor point="BOTTOMRIGHT" x="-16" y="8" />
            </Anchors>
        </Button>
    </Frames>
    <Layers>
        <Layer level="ARTWORK">
            <FontString inherits="GameFontNormalLarge" parentKey="Title">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
</Frame>

<Frame name="LiteMountProfileImport" parent="UIParent" hidden="true" inherits="TooltipBackdropTemplate" mixin="LiteMountProfileImportMixin" frameStrata="DIALOG" toplevel="true">
    <KeyValues>
        <KeyValue key="backdropBorderColor" value="GRAY_FONT_COLOR" TYpe="global" />
        <KeyValue key="backdropColorAlpha" value="0.8" TYpe="number" />
    </KeyValues>
    <Scripts>
        <OnLoad inherit="append" method="OnLoad" />
        <OnShow inherit="append" method="OnShow" />
    </Scripts>
    <Size x="280" y="140" />
    <Anchors>
        <!-- This puts it over where the profile dropdown menu is. -->
        <Anchor point="TOP" relativeTo="InterfaceOptionsFrame" relativePoint="TOPRIGHT" y="64" />
    </Anchors>
    <Layers>
        <Layer level="ARTWORK">
            <FontString inherits="GameFontNormalLarge" parentKey="Title" Text="LM_IMPORT_PROFILE">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </FontString>
            <FontString inherits="GameFontNormal" parentKey="ProfileNameText" justfyH="RIGHT" text="NAME">
                <Anchors>
                    <Anchor point="TOPLEFT" x="24" y="-48" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
    <Frames>
        <EditBox parentKey="ProfileName" inherits="InputBoxTemplate" autoFocus="false">
            <Size y="30" />
            <Anchors>
                <Anchor point="LEFT" relativeKey="$parent.ProfileNameText" relativePoint="RIGHT" x="12" />
                <Anchor point="RIGHT" x="-80" />
            </Anchors>
            <FontString inherits="ChatFontNormal" />
            <Scripts>
                <OnEscapePressed function="EditBox_ClearFocus" />
                <OnTextChanged> self:GetParent():UpdateImportButton() </OnTextChanged>
                <OnTabPressed> self:GetParent().ProfileData:SetFocus() </OnTabPressed>
            </Scripts>
        </EditBox>
        <EditBox parentKey="ProfileData" inherits="InputBoxTemplate" autoFocus="false">
            <Size y="30" />
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.ProfileName" relativePoint="BOTTOMLEFT" y="-4" />
                <Anchor point="RIGHT" x="-16" />
            </Anchors>
            <FontString inherits="ChatFontNormal" />
            <Scripts>
                <OnEscapePressed function="EditBox_ClearFocus" />
                <OnTextChanged> self:GetParent():UpdateImportButton() </OnTextChanged>
                <OnTabPressed> self:GetParent().ProfileName:SetFocus() </OnTabPressed>
            </Scripts>
        </EditBox>
        <Button parentKey="CancelButton" inherits="UIPanelButtonTemplate" text="CANCEL">
            <Scripts>
                <OnClick> self:GetParent():Hide() </OnClick>
            </Scripts>
            <Size x="96" y="22" />
            <Anchors>
                <Anchor point="BOTTOMRIGHT" x="-8" y="8" />
            </Anchors>
        </Button>

        <Button parentKey="ImportButton" inherits="UIPanelButtonTemplate" text="Import">
            <Scripts>
                <OnClick> self:GetParent():ImportProfile() </OnClick>
            </Scripts>
            <Size x="96" y="22" />
            <Anchors>
                <Anchor point="RIGHT" relativePoint="LEFT" relativeKey="$parent.CancelButton" x="-4" />
            </Anchors>
        </Button>
    </Frames>
</Frame>

</Ui>
